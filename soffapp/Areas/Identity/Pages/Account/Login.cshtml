@page
@model LoginModel

@{
    ViewData["Title"] = "";
}



 <div class="vh-100 d-flex justify-content-center align-items-center">

 <div class="col-md-5">

 <p class=" text-center font-weight-bold text-uppercase" style="color: #242424; font-size: 24px;">¡Hola, Bienvenido de Nuevo! 👋</p>
<p class="text-center">Es un placer tenerte de nuevo por acá, te deseo suerte con las ventas de hoy</p>
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn btn-primary custom-btn" style="width: 370px; height: 45px; flex-shrink: 0;">Iniciar sesion</button>
                </div>
                <div>

                    <p class="mt-2 ml-auto w-100 d-flex justify-content-end align-items-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar nuevo usuario</a>
                    </p>
               
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
