@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mt-2">
    <div class="col-sm-6">

        <div class="card">
            <div class="card-header">Producto mas vendido</div>
            <div class="card-body">
                <canvas id="chartVentas" style="max-height:180px"></canvas>
            </div>
        </div>



        <div class="card">
            <div class="card-header">Productos mayor vendidos</div>
            <div class="card-body">
                <canvas id="chartProductos" style="max-height:250px"></canvas>
            </div>
        </div>


    </div>
</div>


@section Scripts{
    <script>

        function resumenProducto() {
            fetch("Home/resumenProducto")
            .then((response) =>{
                return response.ok? response.json() : Promise.reject(response);
            })
            .then((dataJson) => {
                console.log(dataJson)

                    const labels = dataJson.map((item) => { return item.total})
                    const values = dataJson.map((item) => { return item.cantidad })


                    //console.log(labels)
                    //console.log(values)
                    
                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'cantidad',
                            data: values,
                            backgroundColor:
                                'rgba(255, 99, 132, 0.2)',
                                
                            
                            
                            borderWidth: 1
                        }]
                    };

                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        },
                    };

                    const canvasBarras = document.getElementById("chartProductos");

                    const graficoBarras = new Chart(canvasBarras,config)


            }).catch((error) => {
                console.log("error")
            })
        }

        function resumenVenta() {
            fetch("Home/resumenVenta")
                .then((response) => {
                    return response.ok ? response.json() : Promise.reject(response);
                })
                .then((dataJson) => {
                    console.log(dataJson)

                    const labels = dataJson.map((item) => { return item.nombre })
                    const values = dataJson.map((item) => { return item.cantidad })
                    


                    console.log(labels)
                    console.log(values)

                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'Producto mas vendido',
                            data: values,
                            backgroundColor: [
                                'rgb(255, 99, 132)',
                                
                            ],
                            
                        }]
                    };



                    const config = {
                        type: 'doughnut',
                        data: data,
                    };
                    

                    const canvasdona = document.getElementById("chartVentas");

                    const graficodona = new Chart(canvasdona, config)


                }).catch((error) => {
                    console.log("error")
                })
        }






        $(document).ready(()=>{
            resumenProducto()
            resumenVenta()
        })


    </script>
}
