<div>
    <div class="w-100 row">

        
        <div class="col-10 px-0 d-flex align-items-center justify-content-end">
            <a asp-action="Create" asp-controller="Insumoes">
                <button type="submit" class="btn btn-primary">
                    Agregar Insumo
                </button>
            </a>
        </div>
    </div>
</div>


<div class="mt-4 border rounded bg-white">


<table class="table mb-0 table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCaducidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCaducidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.IdInsumo" class="btn border rounded">
                            <i class="bi bi-pencil-square"></i>
                </a>
                        <a asp-action="Details" asp-route-id="@item.IdInsumo" class="btn border rounded">
                            <i class="bi bi-file-zip"></i>
                </a>
                        <a asp-action="Delete" asp-route-id="@item.IdInsumo" class="btn border rounded">
                            <i class="bi bi-trash3"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>