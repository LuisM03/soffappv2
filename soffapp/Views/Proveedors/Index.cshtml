@model IEnumerable<soffapp.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>

</style>


@*-------------------------------Titulo y hora------------------------------*@



@*-------------------------------------------------------------*@
<table class="border" style="min-width: 1283px;">
    <tr>


    @*----------------------------------Buscador---------------------------*@
        <td  style="width: 436px; height:45px; ">
            <input placeholder="Buscar" name="enviar" class="pl-3 pr-3 rounded w-100 h-100 border" >

    </td>
    @*--------------------------------Ooicones lugar-----------------------------*@


        <td class="pl-3 " style="width: 176px; height:45px; ">
        <select class="p-2 h-100 w-100  border rounded">
             
            <option value="opcion1">Opción 1</option>
            <option value="opcion2">Opción 2</option>
            <option value="opcion3">Opción 3</option>
        </select>
    </td>


     <td class="pl-4" >
            <button style="width: 199px; height:45px; " class="btn btn-outline-primary ">
            Generar Reporte
        </button>

    </td>
    @*------------------------------Boton para resgistrar un nuevo proveedor-------------------------------*@

        <td class="d-flex justify-content-end ">
            <a style="width: 138px; height:45px; " class="btn btn-outline-primary " asp-action="Create">Create New</a>
       
    </td>

    </tr>
</table>
@*-------------------------------------------------------------*@
<table id="tabla" class="table border text-muted  mt-2 rounded" style="min-width: 1283px;">
    <thead>
        <tr class="fs-6">

            <th class="bg-light">
                @Html.DisplayNameFor(model=> model.IdProveedor)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th class="bg-light">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProveedor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProveedor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
