@model IEnumerable<soffapp.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet">

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<style>

</style>

@*-------------------------------------------------------------*@
<table class="border" style="min-width: 1283px;">
    <tr>


    @*----------------------------------Buscador---------------------------*@
        <td  style="width: 436px; height:45px; ">
            <input placeholder="Buscar" name="enviar" class="pl-3 pr-3 rounded w-100 h-100 border" >

    </td>
    @*--------------------------------Ooicones lugar-----------------------------*@


        <td class="pl-3 " style="width: 176px; height:45px; ">
        <select class="p-2 h-100 w-100  border rounded">
             
            <option value="opcion1">Opción 1</option>
            <option value="opcion2">Opción 2</option>
            <option value="opcion3">Opción 3</option>
        </select>
    </td>


     <td class="pl-4" >
            <button style="width: 199px; height:45px; " class="btn btn-outline-primary ">
            Generar Reporte
        </button>

    </td>
    @*------------------------------Boton para resgistrar un nuevo proveedor-------------------------------*@


    <td class="">
      <a class="btn btn-outline-primary w-50" asp-action="Create">Create New</a>
    </td>

    </tr>
</table>
@*-------------------------------------------------------------*@
<table id="tabla" class="table border text-muted  mt-2 rounded" style="min-width: 1283px;">
    <thead>
        <tr class="fs-6">

            <th class="bg-light">
                @Html.DisplayNameFor(model=> model.IdProveedor)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th class="bg-light">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th class="bg-light">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                </a>
                <a asp-action="Details" asp-route-id="@item.IdProveedor">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                        </svg>
                </a>
                
                <a asp-action="Delete" asp-route-id="@item.IdProveedor">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
