@model soffapp.Models.Compra;
@{
    ViewData["Title"] = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="w-100 row">
        
        <div class="col-2">
            <button class="btn btn-dark">
                Gestionar reporte
            </button>
        </div>
        <div class="col-10 px-0 d-flex align-items-center justify-content-end">
            <form method="post" asp-action="Create">
                <button type="submit" class="btn btn-primary">
                    Agregar compra
                </button>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 border rounded bg-white">
    <table class="table mb-0 table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Fecha</td>
                <td>Proveedor</td>
                <td>Cantidad Ordenes</td>
                <td>Total</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var compra in ViewBag.Compras)
            {
                <tr>
                    <td>@compra.IdCompra</td>
                    <td>@compra.FechaCompra</td>
                    <td>@compra.IdProveedor</td>
                    <td>@compra.CantidadOrdenes</td>
                    <td>@compra.Total</td>
                </tr>
            }
        </tbody>
    </table>
</div>

