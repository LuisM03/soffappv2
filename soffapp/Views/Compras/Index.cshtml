@model soffapp.Models.Compra;
@{
    ViewData["Title"] = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="w-100 row m-0">
        <div class="col-12 px-0 d-flex align-items-center justify-content-end">
            <form method="post" asp-action="Create">
                <button type="submit" class="btn btn-primary">
                    Agregar compra
                </button>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 border rounded bg-white">
    <table class="table mb-0 table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Fecha</td>
                <td>Proveedor</td>
                <td>Cantidad Ordenes</td>
                <td>Total</td>
                <td>Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var compra in ViewBag.Compras)
            {
                <tr>
                    <td>@compra.IdCompra</td>
                    <td>@compra.FechaCompra</td>
                    <td>@compra.Nombre</td>
                    <td>@compra.CantidadOrdenes</td>
                    <td>@compra.Total</td>
                    <td>
                        <a asp-controller="OrdenCompras" asp-action="Details" asp-route-id="@compra.IdCompra" class="btn border rounded">
                            <i class="bi bi-file-zip"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

